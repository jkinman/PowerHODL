# ETH/BTC Trading System Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host.neon.tech/database?sslmode=require
# Alternative environment variable name (both work)
NEON_DATABASE_URL=postgresql://username:password@host.neon.tech/database?sslmode=require

# Exchange Configuration
EXCHANGE=coinbase  # Options: coinbase, kraken, gemini, kucoin, binance

# Coinbase Advanced Trade (Recommended for US)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Kraken (Lower fees, good for EU/US)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET=your_kraken_secret_here

# Gemini (Regulated, good for US)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_SECRET=your_gemini_secret_here

# KuCoin (Global, lower fees)
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET=your_kucoin_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here

# Binance (if available in your region)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Cron Job Security (generate a random string for production)
CRON_SECRET=your_random_secret_string_here

# Optional: Enhanced Data Sources
COINGECKO_API_KEY=your_coingecko_api_key_here

# Strategy Parameters
REBALANCE_THRESHOLD=0.05
TRANSACTION_COST=0.001
Z_SCORE_THRESHOLD=1.5

# Monitoring Settings
MONITORING_INTERVAL_MINUTES=60
ALERT_EMAIL=your_email@example.com

# Data Settings
DATA_DAYS_BACK=365
UPDATE_FREQUENCY_HOURS=1

# Risk Management
MAX_POSITION_SIZE=0.5
STOP_LOSS_PERCENT=0.1

# Notification Settings (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Modern MetaMask Integration 2024 (NO EXTERNAL APIs REQUIRED!)
TRADING_MODE=metamask    # Options: metamask, simulation, live, cex, dex  
METAMASK_PRIVATE_KEY=your_metamask_wallet_private_key
DEX_SIMULATION_MODE=true  # Start with simulation mode

