# PowerHODL Svelte Environment Variables

# Public Environment Variables (available in browser)
PUBLIC_API_URL=http://localhost:3001
PUBLIC_APP_NAME=PowerHODL
PUBLIC_APP_VERSION=2.0.0
PUBLIC_ENVIRONMENT=development

# Private Environment Variables (server-side only)
PRIVATE_DATABASE_URL=postgresql://username:password@host:port/database
PRIVATE_CRON_SECRET=your-secret-key-here
PRIVATE_COINBASE_API_KEY=your-coinbase-api-key
PRIVATE_COINBASE_SECRET=your-coinbase-secret
PRIVATE_COINBASE_PASSPHRASE=your-coinbase-passphrase

# Build Configuration
VITE_BUILD_ANALYZE=false
NODE_ENV=development

# Vercel Deployment
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id