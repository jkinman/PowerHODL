{
  "name": "powerhodl-monorepo",
  "version": "2.0.0",
  "description": "PowerHODL - BTC Bear Market Buster Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "cd apps/powerhodl-frontend && npm run dev",
    "dev:api": "cd apps/powerhodl-api && npm run dev",
    "build:frontend": "cd apps/powerhodl-frontend && npm run build",
    "build:api": "cd apps/powerhodl-api && npm run build",
    "test": "npm run test --workspaces",
    "clean": "rm -rf .vercel node_modules/.cache apps/*/node_modules apps/*/.vercel",
    "install:all": "npm install && npm install --workspaces",
    "deploy:frontend": "cd apps/powerhodl-frontend && npx vercel deploy --prod -y",
    "deploy:api": "cd apps/powerhodl-api && npx vercel deploy --prod -y",
    "docs": "echo 'ðŸ“š See README.md and API_DOCUMENTATION.md'"
  },
  "keywords": [
    "crypto",
    "trading",
    "ethereum",
    "bitcoin",
    "arbitrage",
    "mean-reversion"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@metamask/sdk": "^0.33.1",
    "@neondatabase/serverless": "^0.6.0",
    "axios": "^1.6.0",
    "ccxt": "^4.1.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "express": "^4.21.2",
    "fs-extra": "^11.1.1",
    "helmet": "^8.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.1",
    "pg": "^8.11.3",
    "simple-statistics": "^7.8.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "serve": "^14.2.1",
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
